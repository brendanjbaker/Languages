# Top-most EditorConfig file
root = true

# Apply to all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# F# source files
[*.fs]
indent_style = space
indent_size = 4
tab_width = 4

# F# script files
[*.fsx]
indent_style = space
indent_size = 4
tab_width = 4

# Project files
[*.fsproj]
indent_style = space
indent_size = 2

# Solution files (optional)
[*.sln]
indent_style = space
indent_size = 2
